class Solution {
    public boolean isArmstrong(int N) {
        List<Integer> numbers = new ArrayList<>();
        int temp = N;
        int digits = 0;
        while (temp != 0) {
            numbers.add(temp%10);
            digits++;
            temp = temp/10;
        }
        
        int sum = 0;
        for (int i=0; i<numbers.size(); i++) {
            sum = sum + (int) Math.pow(numbers.get(i), digits);
        }
        
        return sum == N ? true : false;
    }
}
