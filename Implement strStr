class Solution {
    public int strStr(String haystack, String needle) {
        if (needle.length()==0)
            return 0;
        int n = needle.length();
        for (int i=0; i<haystack.length()-n+1; i++) {
            String s = haystack.substring(i,i+n);
            if (s.equals(needle))
                return i;
        }
         if (needle.length() == haystack.length()) {
            if (needle.equals(haystack))
                return 0;
        }
        return -1;
    }
}
