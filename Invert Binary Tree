class Solution {
    public TreeNode invertTree(TreeNode root) {
        if (root == null) {
            return root;
        }
        
        helper(root);
        return root;
    }
    
    public void helper(TreeNode node) {
        if (node == null)
            return;
    
        TreeNode temp = node.left;
        node.left = node.right;
        node.right = temp;
        
        helper(node.left);
        helper(node.right);
    }
}
