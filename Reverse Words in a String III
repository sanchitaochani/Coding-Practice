class Solution {
    public String reverseWords(String s) {
        String[] words = s.split(" ");
        String result = "";
        for (int i=0; i<words.length; i++) {
            StringBuffer sb = new StringBuffer(words[i]);
            sb.reverse();
            result = result + sb.toString() + " ";
        }
        return result.trim();
    }
}
