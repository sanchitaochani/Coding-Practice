class Solution {
    public int[] twoSum(int[] nums, int target) {
        int[] result=new int[2];
        HashMap<Integer, Integer> hm = new HashMap<>();
        
        for (int i=0; i<nums.length; i++) {
            int x = target - nums[i];
            if (hm.containsKey(x)) {
                result[0] = hm.get(x);
                result[1] = i;
            }
            hm.put(nums[i],i);
        }
        return result;
    }
}
